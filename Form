			<script language="JavaScript" type="text/javascript">

			function validateForm(form){
				
			var fNm = form.fname.value;
			var eMl = form.email.value;
			var apos=eMl.indexOf("@");
			var dotpos=eMl.lastIndexOf(".");
			var pwrd=form.pwrd.value;
			var sname=form.sname.value;
			var cat=form.cat.value;
			var country=form.country.value;
				
			  if (fNm == "" || fNm == null){
			    alert( "Please enter your name." );
			    form.fname.focus();
			    return false;
			  }
			  if (sname == "" || sname == null){
			    alert( "Please enter your surname." );
			    form.sname.focus();
			    return false;
				}
			  
			  else if(eMl == ""  || eMl == null){
				alert( "Please enter your email." );
			    form.email.focus();
			    return false;
			  }
			   else if(pwrd == "" || pwrd == null) {
				alert( "Please enter a password") ;
				form.pwrd.focus();
				return false;
			  }
			  else if(apos<1||dotpos-apos<2){
			    alert( "Not a valid email." );
			    form.email.focus();
			    return false;
			  }
			  
				if (country == "" || country == null){
			    alert( "Please select a country" );
			    form.country.focus();
			    return false;
			}
			  else{
			  	return true;
			  }
			
			}
			</script>
			

	
